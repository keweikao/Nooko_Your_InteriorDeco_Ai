{
  "globs": [
    "**/*.md",
    "!**/.pytest_cache/**/*.md",
    "!**/node_modules/**",
    "!**/.claude/**"
  ],
  // https://github.com/DavidAnson/markdownlint/blob/main/doc/Rules.md
  "config": {
    "default": true,
    "MD003": {
      "style": "atx"
    },
    "MD007": {
      "indent": 2
    },
    "MD013": false,
    "MD024": {
      "siblings_only": true
    },
    "MD029": false,
    "MD033": false,
    "MD036": false,
    "MD040": false,
    "MD041": false,
    "MD049": {
      "style": "asterisk"
    },
    "MD050": {
      "style": "asterisk"
    },
    "MD060": false
  }
}